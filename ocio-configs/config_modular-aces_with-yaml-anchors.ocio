  - &mtx_sgamut3_to_ap0 [0.75298262, 0.14337018, 0.10364717, 0, 0.02170774, 1.01531911, -0.03702657, 0, -0.00941604, 0.00337040, 1.00604558, 0, 0, 0, 0, 1]
  - &mtx_sgamut3-day_to_ap0 [0.876446, 0.0145412, 0.109013, 0, 0.0774075, 0.952957, -0.0303647, 0, 0.0573564, -0.115107, 1.05775, 0, 0, 0, 0, 1]
