  - &mtx_venice-sgamut3_to_ap0 [0.79333, 0.0890786, 0.117592, 0, 0.0155811, 1.03271, -0.0482934, 0, -0.0188647, 0.0127694, 1.0061, 0, 0, 0, 0, 1]
  - &mtx_venice-sgamut3cine_to_ap0 [0.674257, 0.220572, 0.105171, 0, -0.00931361, 1.10596, -0.0966453, 0, -0.0382091, -0.0179384, 1.05615, 0, 0, 0, 0, 1]
  - &mtx_alexawg_to_ap0 [0.73476535, 0.15553665, 0.10969799, 0, 0.09226618, 0.67018014, 0.23755382, 0, 0.00222149, -0.04120818, 1.03898656, 0, 0, 0, 0, 1]
  - &mtx_redwg_to_ap0 [0.78486896, 0.08576044, 0.12937061, 0, 0.02270968, 1.09055710, -0.11326653, 0, -0.07380762, -0.32026902, 1.39407659, 0, 0, 0, 0, 1]
  - &mtx_vgamut_to_ap0 [0.72437793, 0.16829555, 0.10732652, 0, 0.02088307, 0.98686528, -0.00774817, 0, -0.00905834, -0.00509586, 1.01415408, 0, 0, 0, 0, 1]
  - &mtx_protune_to_ap0 [0.53344852, 0.32413912, 0.14241238, 0, -0.05072996, 1.07572067, -0.02499051, 0, 0.07141964, -0.29052189, 1.21910226, 0, 0, 0, 0, 1]
  - &mtx_cgamut-day_to_ap0 [0.76306456, 0.14902112, 0.08791436, 0, 0.00365748, 1.10696065, -0.11061791, 0, -0.00940778, -0.21838327, 1.22779095, 0, 0, 0, 0, 1]
  - &mtx_cgamut-tung_to_ap0 [0.817416, 0.0907557, 0.091828, 0, -0.0353614, 1.06569, -0.0303292, 0, 0.0103904, -0.299271, 1.28888, 0, 0, 0, 0, 1]

  - &mtx_p3d60_to_ap0 [0.53010160, 0.27786112, 0.19203725, 0, 0.07592519, 0.81960624, 0.10446860, 0, 0.00000002, 0.04455275, 0.95544720, 0, 0, 0, 0, 1]
  - &mtx_p3d65_to_ap0 [0.51884151, 0.28730032, 0.19385816, 0, 0.07361169, 0.82129973, 0.10508882, 0, -0.00040037, 0.04067384, 0.95972645, 0, 0, 0, 0, 1]
  - &mtx_p3dci_to_ap0 [0.48521525, 0.32400581, 0.19077893, 0, 0.06690042, 0.82933831, 0.10376146, 0, 0.00010186, 0.04991445, 0.94998360, 0, 0, 0, 0, 1]
  - &mtx_bt2020_to_ap0 [0.67889118, 0.15886839, 0.16224040, 0, 0.04557089, 0.86071301, 0.09371640, 0, -0.00048569, 0.02506020, 0.97542542, 0, 0, 0, 0, 1]
  - &mtx_bt709_to_ap0 [0.43957570, 0.38391256, 0.17651173, 0, 0.08960043, 0.81471437, 0.09568546, 0, 0.01741550, 0.10873430, 0.87385011, 0, 0, 0, 0, 1]

  # Display gamut to CIEXYZ (No chromatic adaptation)
  - &mtx_ap1_to_xyz [0.66245419, 0.13400421, 0.15618770, 0, 0.27222875, 0.67408174, 0.05368952, 0, -0.00557466, 0.00406074, 1.01033914, 0, 0, 0, 0, 1]
  - &mtx_p3d60_to_xyz [0.50494957, 0.26468146, 0.18301505, 0, 0.23762332, 0.68917066, 0.07320601, 0, 0.00000000, 0.04494593, 0.96387923, 0, 0, 0, 0, 1]
  - &mtx_p3d65_to_xyz [0.48657098, 0.26566768, 0.19821729, 0, 0.22897457, 0.69173855, 0.07928691, 0, 0.00000000, 0.04511340, 1.04394436, 0, 0, 0, 0, 1]
  - &mtx_p3dci_to_xyz [0.44516984, 0.27713439, 0.17228265, 0, 0.20949169, 0.72159529, 0.06891306, 0, 0.00000000, 0.04706058, 0.90735531, 0, 0, 0, 0, 1]
  - &mtx_bt2020_to_xyz [0.63695806, 0.14461690, 0.16888097, 0, 0.26270023, 0.67799807, 0.05930172, 0, 0.00000000, 0.02807270, 1.06098509, 0, 0, 0, 0, 1]
  - &mtx_bt709_to_xyz [0.41239080, 0.35758433, 0.18048081, 0, 0.21263902, 0.71516865, 0.07219232, 0, 0.01933082, 0.11919473, 0.95053220, 0, 0, 0, 0, 1]
 
  # Utilities
  - &mtx_cat_d60_to_d65_bradford [0.98722541, -0.00611481, 0.01592641, 0, -0.00760388, 1.00187480, 0.00532203, 0, 0.00306604, -0.00508424, 1.08151925, 0, 0, 0, 0, 1]
  - &mtx_cat_d60_to_d50_bradford [1.03413868, 0.01679790, -0.03742383, 0, 0.02161085, 0.99222952, -0.01270486, 0, -0.00692726, 0.01130731, 0.81330264, 0, 0, 0, 0, 1]
  - &mtx_cat_d60_to_d65_cat02 [0.98824048, -0.00789157, 0.01672901, 0, -0.00569724, 0.99870765, 0.00666113, 0, 0.00035284, 0.00112166, 1.07792985, 0, 0, 0, 0, 1]
  - &mtx_aces_rrt_desat [0.97088915, 0.02696327, 0.00214758, 0, 0.01088915, 0.98696327, 0.00214758, 0, 0.01088915, 0.02696327, 0.96214759, 0, 0, 0, 0, 1]
  - &mtx_aces_odt_desat [0.94905603, 0.04718572, 0.00375827, 0, 0.01905601, 0.97718573, 0.00375827, 0, 0.01905601, 0.04718572, 0.93375826, 0, 0, 0, 0, 1]

  # Move blue primary to reduce saturation. Handles negative out of gamut values in acescg
  # https://acescentral.com/t/colour-artefacts-or-breakup-using-aces/520/6
  - &mtx_desat_blue_primary [0.940437, -0.0183069, 0.0778696, 0, 0.0083787, 0.82866, 0.162961, 0, 0.000547126, -0.000883375, 1.00034, 0, 0, 0, 0, 1]


  # Colorspace defaults
  - &defaults 
    equalitygroup: ""
    bitdepth: 32f
    isdata: false

  - &defaults-log-alloc
    <<: *defaults
    allocation: lg2
    allocationvars: [-8, 5, 0.00390625]
  
  - &defaults-uniform-alloc
    <<: *defaults
    allocation: uniform
    allocationvars: [0, 1]

  - &defaults-tonescale-alloc
    <<: *defaults
    allocation: uniform
    allocationvars: [0, 1.1]




  # Colorspaces
  # --------------------------------------------------------------------------------#

  - !<ColorSpace>
    name: raw
    family: utility
    description: The reference colorspace.
    <<: *defaults-uniform-alloc
    isdata: true
 

  # Gamut Colorspaces
  # ------------------
  
  # Working Gamuts / Chromaticities
  - !<ColorSpace>
    name: ap0
    family: input/gamut
    <<: *defaults-log-alloc

  - !<ColorSpace>
    name: ap1
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_ap1_to_ap0}


  # Camera Gamuts / Chromaticities
  - !<ColorSpace>
    name: alexawg
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_alexawg_to_ap0}

  - !<ColorSpace>
    name: redwg
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_redwg_to_ap0}

  - !<ColorSpace>
    name: protune
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_protune_to_ap0}

  - !<ColorSpace>
    name: sgamut3
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_sgamut3_to_ap0}

  - !<ColorSpace>
    name: sgamut3-day
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_sgamut3-day_to_ap0}

  - !<ColorSpace>
    name: sgamut3-tung
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_sgamut3-tung_to_ap0}

  - !<ColorSpace>
    name: sgamut3cine
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_sgamut3cine_to_ap0}

  - !<ColorSpace>
    name: venice-sgamut3
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_venice-sgamut3_to_ap0}

  - !<ColorSpace>
    name: venice-sgamut3cine
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_venice-sgamut3cine_to_ap0}

  - !<ColorSpace>
    name: vgamut
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_vgamut_to_ap0}

  - !<ColorSpace>
    name: cgamut-day
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_cgamut-day_to_ap0}

  - !<ColorSpace>
    name: cgamut-tung
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_cgamut-tung_to_ap0}


  # Display Gamuts / Chromaticities
  - !<ColorSpace>
    name: bt2020
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_bt2020_to_ap0}

  - !<ColorSpace>
    name: bt709
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_bt709_to_ap0}

  - !<ColorSpace>
    name: p3d60
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_p3d60_to_ap0}

  - !<ColorSpace>
    name: p3d65
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_p3d65_to_ap0}

  - !<ColorSpace>
    name: p3dci
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_p3dci_to_ap0}

  - !<ColorSpace>
    name: xyz
    family: input/gamut
    <<: *defaults-log-alloc
    to_reference: !<MatrixTransform> {matrix: *mtx_xyz_to_ap0}




  # Transfer Function Colorspaces
  # --------------------------------------------------------------------------------#
  - !<ColorSpace>
    name: log_acescc
    family: input/curve
    <<: *defaults
    allocation: uniform
    allocationvars: [-0.3584, 1.468]
    to_reference: !<GroupTransform>
      children:
        - !<FileTransform> {src: crv_acescc_to_linear.spi1d, interpolation: linear}

  - !<ColorSpace>
    name: log_acescct
    family: input/curve
    <<: *defaults
    allocation: uniform
    allocationvars: [-0.249136, 1.468]
    to_reference: !<GroupTransform>
      children:
        - !<FileTransform> {src: crv_acescct_to_linear.spi1d, interpolation: linear}

  - !<ColorSpace>
    name: log_acesproxy
    family: input/curve
    <<: *defaults-uniform-alloc
    to_reference: !<GroupTransform>
      children:
        - !<FileTransform> {src: crv_acesproxy_to_linear.spi1d, interpolation: linear}


  - !<ColorSpace>
    name: logc
    family: input/curve
    description: Arri V3 LogC EI 800 
    <<: *defaults-uniform-alloc
    to_reference: !<FileTransform> {src: crv_logc-ei800_to_linear.spi1d, interpolation: linear}
    
  - !<ColorSpace>
    name: log3g10
    family: input/curve
    description: Red Log3g10
    <<: *defaults-uniform-alloc
    to_reference: !<FileTransform> {src: crv_log3g10_to_linear.spi1d, interpolation: linear}
    
  - !<ColorSpace>
    name: protuneflat
    family: input/curve
    description: GoPro Protune Flat log
    <<: *defaults-uniform-alloc
    to_reference: !<FileTransform> {src: crv_protuneflat_to_linear.spi1d, interpolation: linear}

  - !<ColorSpace>
    name: slog1
    family: input/curve
    description: Sony S-Log1
    <<: *defaults-uniform-alloc
    to_reference: !<FileTransform> {src: crv_slog1_to_linear.spi1d, interpolation: linear}
  
  - !<ColorSpace>
    name: slog2
    family: input/curve
    description: Sony S-Log2
    <<: *defaults-uniform-alloc
    to_reference: !<FileTransform> {src: crv_slog2_to_linear.spi1d, interpolation: linear}
  
  - !<ColorSpace>
    name: slog3
    family: input/curve
    description: Sony S-Log3
    <<: *defaults-uniform-alloc
    to_reference: !<FileTransform> {src: crv_slog3_to_linear.spi1d, interpolation: linear}
    
  - !<ColorSpace>
    name: vlog
    family: input/curve
    description: Panasonic V-Log
    <<: *defaults-uniform-alloc
    to_reference: !<FileTransform> {src: crv_vlog_to_linear.spi1d, interpolation: linear}
    
  - !<ColorSpace>
    name: clog
    family: input/curve
    description: Canon Log
    <<: *defaults-uniform-alloc
    to_reference: !<FileTransform> {src: crv_clog_to_linear.spi1d, interpolation: linear}    
  
  - !<ColorSpace>
    name: clog2
    family: input/curve
    description: Canon Log2
    <<: *defaults-uniform-alloc
    to_reference: !<FileTransform> {src: crv_clog2_to_linear.spi1d, interpolation: linear}    
  
  - !<ColorSpace>
    name: clog3
    family: input/curve
    description: Canon Log3
    <<: *defaults-uniform-alloc
    to_reference: !<FileTransform> {src: crv_clog3_to_linear.spi1d, interpolation: linear}

      


  # Input Device Transform Colorspaces
  # --------------------------------------------------------------------------------#
  - !<ColorSpace>
    name: alexa_logc-wg
    family: input
    description: Alexa Wide Gamut V3 LogC
    <<: *defaults-uniform-alloc
    to_reference: !<GroupTransform>
      children:
        - !<ColorSpaceTransform> {src: logc, dst: aces}
        - !<ColorSpaceTransform> {src: alexawg, dst: aces}

  - !<ColorSpace>
    name: red_log3g10-wg
    family: input
    description: Red IPP2 Primaries and transfer function - RedWideGamutRGB + RedLog3G10
    <<: *defaults-uniform-alloc
    to_reference: !<GroupTransform>
      children:
        - !<ColorSpaceTransform> {src: log3g10, dst: aces}
        - !<ColorSpaceTransform> {src: redwg, dst: aces}

  - !<ColorSpace>
    name: gopro_protune
    family: input
    description: GoPro Protune Flat with Protune primaries.
    <<: *defaults-uniform-alloc
    to_reference: !<GroupTransform>
      children:
        - !<ColorSpaceTransform> {src: protuneflat, dst: aces}
        - !<ColorSpaceTransform> {src: protune, dst: aces}

  - !<ColorSpace>
    name: sony_slog1-sgamut3
    family: input
    description: Sony - S-Log1 - S-Gamut / S-Gamut3
    <<: *defaults-uniform-alloc
    to_reference: !<GroupTransform>
      children:
        - !<ColorSpaceTransform> {src: slog1, dst: aces}
        - !<ColorSpaceTransform> {src: sgamut3, dst: aces}

  - !<ColorSpace>
    name: sony_slog2-sgamut3
    family: input
    description: Sony - S-Log2 - S-Gamut / S-Gamut3
    <<: *defaults-uniform-alloc
    to_reference: !<GroupTransform>
      children:
        - !<ColorSpaceTransform> {src: slog2, dst: aces}
        - !<ColorSpaceTransform> {src: sgamut3, dst: aces}

  - !<ColorSpace>
    name: sony_slog2-sgamut-day
    family: input
    description: Sony - S-Log2 - S-Gamut / S-Gamut3 - Daylight
    <<: *defaults-uniform-alloc
    to_reference: !<GroupTransform>
      children:
        - !<ColorSpaceTransform> {src: slog2, dst: aces}
        - !<ColorSpaceTransform> {src: sgamut3-day, dst: aces}

  - !<ColorSpace>
    name: sony_slog2-sgamut-tung
    family: input
    description: Sony - S-Log2 - S-Gamut / S-Gamut3 - Tungsten
    <<: *defaults-uniform-alloc
    to_reference: !<GroupTransform>
      children:
        - !<ColorSpaceTransform> {src: slog2, dst: aces}
        - !<ColorSpaceTransform> {src: sgamut3-tung, dst: aces}

  - !<ColorSpace>
    name: sony_slog3-sgamut3
    family: input
    description: Sony - S-Log3 - S-Gamut / S-Gamut3 - Tungsten
    <<: *defaults-uniform-alloc
    to_reference: !<GroupTransform>
      children:
        - !<ColorSpaceTransform> {src: slog3, dst: aces}
        - !<ColorSpaceTransform> {src: sgamut3, dst: aces}

  - !<ColorSpace>
    name: sony_slog3-sgamut3cine
    family: input
    description: Sony - S-Log3 - S-Gamut3.Cine
    <<: *defaults-uniform-alloc
    to_reference: !<GroupTransform>
      children:
        - !<ColorSpaceTransform> {src: slog3, dst: aces}
        - !<ColorSpaceTransform> {src: sgamut3cine, dst: aces}

  - !<ColorSpace>
    name: sony_venice_slog3-sgamut3
    family: input
    description: Sony - S-Log3 - S-Gamut3.Cine
    <<: *defaults-uniform-alloc
    to_reference: !<GroupTransform>
      children:
        - !<ColorSpaceTransform> {src: slog3, dst: aces}
        - !<ColorSpaceTransform> {src: venice-sgamut3, dst: aces}

  - !<ColorSpace>
    name: sony_venice_slog3-sgamut3cine
    family: input
    description: Sony - S-Log3 - S-Gamut3.Cine
    <<: *defaults-uniform-alloc
    to_reference: !<GroupTransform>
      children:
        - !<ColorSpaceTransform> {src: slog3, dst: aces}
        - !<ColorSpaceTransform> {src: venice-sgamut3cine, dst: aces}

  - !<ColorSpace>
    name: panasonic_vlog-vgamut
    family: input
    description: Panasonic - V-Log - V-Gamut
    <<: *defaults-uniform-alloc
    to_reference: !<GroupTransform>
      children:
        - !<ColorSpaceTransform> {src: vlog, dst: aces}
        - !<ColorSpaceTransform> {src: vgamut, dst: aces}

  - !<ColorSpace>
    name: canon_clog3-cgamut-day
    family: input
    description: Canon - Canon-Log3 - Cinema Gamut - Daylight
    <<: *defaults-uniform-alloc
    to_reference: !<GroupTransform>
      children:
        - !<ColorSpaceTransform> {src: clog, dst: aces}
        - !<ColorSpaceTransform> {src: cgamut-day, dst: aces}

  - !<ColorSpace>
    name: canon_clog3-cgamut-tung
    family: input
    description: Canon - Canon-Log3 - Cinema Gamut - Tungsten
    <<: *defaults-uniform-alloc
    to_reference: !<GroupTransform>
      children:
        - !<ColorSpaceTransform> {src: clog, dst: aces}
        - !<ColorSpaceTransform> {src: cgamut-day, dst: aces}

  - !<ColorSpace>
    name: adx10
    family: input
    <<: *defaults-uniform-alloc
    bitdepth: 10ui
    description: ADX10 color space - used for film scans
    to_reference: !<GroupTransform>
      children:
        - !<MatrixTransform> {matrix: [2.046, 0, 0, 0, 0, 2.046, 0, 0, 0, 0, 2.046, 0, 0, 0, 0, 1], offset: [-0.19, -0.19, -0.19, 0]}
        - !<MatrixTransform> {matrix: [0.75573, 0.22197, 0.0223, 0, 0.05901, 0.96928, -0.02829, 0, 0.16134, 0.07406, 0.7646, 0, 0, 0, 0, 1]}
        - !<FileTransform> {src: crv_adx_cid_to_rle.spi1d, interpolation: linear}
        - !<LogTransform> {base: 10, direction: inverse}
        - !<MatrixTransform> {matrix: [0.72286, 0.1263, 0.15084, 0, 0.11923, 0.76418, 0.11659, 0, 0.01427, 0.08213, 0.90359, 0, 0, 0, 0, 1]}

  - !<ColorSpace>
    name: adx16
    family: input
