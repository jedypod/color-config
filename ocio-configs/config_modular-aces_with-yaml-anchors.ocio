ocio_profile_version: 1

search_path: ${SITE_ROOT}/${SHOW}/shots/${SEQUENCE}/${SHOT}/luts:luts
strictparsing: true
luma: [0.2126, 0.7152, 0.0722]

description: |
  A minimalist modular ACES ocio config.
  All matrices are defined as YAML Anchors using &mtx_name, and referenced later in the config using *mtx_name.
  To avoid duplication, allocationvars are defined using anchors and referenced later using YAML Merge Keys ( <<: *reference )


roles:
  color_picking: work_lin
  compositing_linear: work_lin
  compositing_log: work_log
  data: raw
  default: aces
  scene_linear: work_lin
  matte_paint: work_dmp
  texture_paint: work_lin
  proxy: aces_tonescale_200nits


displays:
  bt709:
    - !<View> {name: grade, colorspace: view_grade}
    - !<View> {name: balance, colorspace: view_balance}
    - !<View> {name: show, colorspace: view_show}
    - !<View> {name: log, colorspace: view_log}
    - !<View> {name: raw, colorspace: raw}


active_displays: [bt709]
active_views: [grade, balance, show, log, raw]








colorspaces:
  
  # Anchors - Variables to be referenced in the config
  #---------------------------------------------------------------------------------#


  # Matrices
  # --------------------------------------------------------------------------------#

  # Colorspace Chromaticity / Gamut Conversion to Reference (CAT02 Chromatic Adaptation if Whitepoints are Different)
